<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/resultNameMeter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:text="123456789012345"
        android:textSize="15sp"
        android:textColor="#4b5563"
        android:fontFamily="@font/bricolage_grotesque_semi_bold"/>
    <TextView
        android:id="@+id/resultMeterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="Stephen Tolu"
        android:layout_below="@id/resultNameMeter"
        android:textSize="11sp"
        android:layout_marginBottom="10dp"
        android:textColor="#9ca3af"
        android:fontFamily="@font/bricolage_grotesque_regular"/>

    <TextView
        android:id="@+id/resultBlockNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="A2"
        android:textSize="11sp"
        android:textColor="#1C1C1C"
        android:fontFamily="@font/bricolage_grotesque_regular"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:id="@+id/resultFlatNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="10dp"
        android:text="22"
        android:layout_below="@id/resultNameMeter"
        android:textSize="11sp"
        android:layout_marginBottom="10dp"
        android:textColor="#1C1C1C"
        android:fontFamily="@font/bricolage_grotesque_regular"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/resultBlockNoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Block No: "
        android:textSize="11sp"
        android:textColor="#4b5563"
        android:fontFamily="@font/bricolage_grotesque_regular"
        android:layout_toStartOf="@id/resultBlockNo"/>
    <TextView
        android:id="@+id/resultFlatNoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flat No: "
        android:layout_below="@id/resultNameMeter"
        android:textSize="11sp"
        android:layout_marginBottom="10dp"
        android:textColor="#4B5563"
        android:fontFamily="@font/bricolage_grotesque_regular"
        android:layout_toStartOf="@id/resultFlatNo"/>

</RelativeLayout>