                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="top"
                android:fontFamily="@font/bricolage_grotesque_semi_bold"/>
            <TextView
                android:id="@+id/apartmentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="duplex"
                android:layout_below="@id/feeText"
                android:textSize="12sp"
                android:textColor="@color/someText"
                android:gravity="bottom"
                android:layout_alignTop="@id/deleteImage"
                android:fontFamily="@font/bricolage_grotesque_regular" />

            <ImageView
                android:id="@+id/editImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/edit_icon"
                android:layout_marginEnd="7dp"
                android:layout_alignParentEnd="true"/>
            <ImageView
                android:id="@+id/deleteImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/delete_icon"
                android:layout_marginEnd="7dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_below="@id/editImage"/>

