<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.History"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/headerBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/imagelogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/userback"
            android:contentDescription="@string/logo"/>

        <TextView
            android:id="@+id/smart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart"
            android:textSize="16sp"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_toEndOf="@id/imagelogo"
            android:layout_marginStart="5dp"/>
        <TextView
            android:id="@+id/utility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Utility"
            android:textSize="16sp"
            android:textColor="@color/primary"
            android:layout_below="@id/smart"
            android:layout_toEndOf="@id/imagelogo"
            android:layout_marginStart="5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/historyRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerBackground"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:id="@+id/historyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:textSize="20sp"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:id="@+id/filterRelative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/filter_background"
            android:layout_alignParentEnd="true"
            android:paddingVertical="8dp"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/filterText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginRight="5dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/baseline_addchart_24"
                android:layout_toEndOf="@id/filterText"/>
        </RelativeLayout>
    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/historyRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/historyRelative"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:id="@+id/emptyLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/charging_meter"
            android:contentDescription="empty logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="7dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_history"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="7dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your transaction details will appear once available"
            android:textColor="@color/someText"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            />

        <Button
            android:id="@+id/purchaseHomeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary"
            android:text="Purchase"
            android:layout_marginTop="24dp"
            android:textColor="@color/white"/>

    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/userHistoryNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        app:menu="@menu/bottom_menu"
        android:background="@color/white"
        android:elevation="2dp"
        app:itemIconTint="@drawable/item_selector"
        style="@style/Widget.MaterialComponents.BottomNavigationView"/>

</RelativeLayout>