<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".estateAdmin.EstatePurchase"
    android:background="@color/globalBackground">

    <RelativeLayout
        android:id="@+id/purhcaseHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/estatePurchaseBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate Token"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:fontFamily="@font/bricolage_grotesque_semi_bold"
            android:textColor="#080808"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/purchaseAmountRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/purhcaseHeader"
        android:padding="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/purchase_border"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/purchaseAmountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Enter Amount: "
            android:textSize="14sp"
            android:textColor="@color/welcomeHead"
            android:fontFamily="@font/bricolage_grotesque_regular"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/estateAmountLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            app:errorTextColor="@color/red"
            app:errorIconTint="@color/red"
            app:errorIconDrawable="@drawable/baseline_error_outline_24"
            android:background="@drawable/purchase_border"
            android:layout_below="@+id/purchaseAmountText"
            android:layout_marginTop="6dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/estatePurchaseAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="0"
                android:fontFamily="@font/bricolage_grotesque_semi_bold"
                android:textColor="#121212"
                android:textColorHint="#909090"
                android:gravity="center"
                android:textSize="28sp"
                android:inputType="numberDecimal"
                android:background="@drawable/purchase_border" />
        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/purchaseOneSelectLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        android:layout_below="@id/purchaseAmountRelative">

        <TextView
            android:id="@+id/estatePur1000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/text_back"
            android:padding="10dp"
            android:text="₦ 1000"
            android:layout_weight="1"
            android:textColor="@color/purhcaseTextColour"
            android:gravity="center"
            android:fontFamily="@font/bricolage_grotesque_regular"/>
        <TextView
            android:id="@+id/estatePur2000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/text_back"
            android:padding="10dp"
            android:text="₦ 2000"
            android:layout_weight="1"
            android:textColor="@color/purhcaseTextColour"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:fontFamily="@font/bricolage_grotesque_regular"/>
        <TextView
            android:id="@+id/estatePur5000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/text_back"
            android:padding="10dp"
            android:text="₦ 5000"
            android:layout_weight="1"
            android:textColor="@color/purhcaseTextColour"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:fontFamily="@font/bricolage_grotesque_regular"/>
        <TextView
            android:id="@+id/estatePur10000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/text_back"
            android:padding="10dp"
            android:text="₦ 10,000"
            android:layout_weight="1"
            android:textColor="@color/purhcaseTextColour"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:fontFamily="@font/bricolage_grotesque_regular"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/purchaseTwoSelectLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        android:layout_below="@id/purchaseOneSelectLinear">

        <TextView
            android:id="@+id/estatePur20000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/text_back"
            android:padding="10dp"
            android:text="₦ 20,000"
            android:layout_weight="1"
            android:textColor="@color/purhcaseTextColour"
            android:gravity="center"
            android:fontFamily="@font/bricolage_grotesque_regular"/>
        <TextView
            android:id="@+id/estatePur30000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/text_back"
            android:padding="10dp"
            android:text="₦ 30,000"
            android:layout_weight="1"
            android:textColor="@color/purhcaseTextColour"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:fontFamily="@font/bricolage_grotesque_regular"/>
        <TextView
            android:id="@+id/estatePur50000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/text_back"
            android:padding="10dp"
            android:text="₦ 50,000"
            android:layout_weight="1"
            android:textColor="@color/purhcaseTextColour"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:fontFamily="@font/bricolage_grotesque_regular"/>
        <TextView
            android:id="@+id/estatePur100000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/text_back"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"
            android:text="₦ 100,000"
            android:layout_weight="1"
            android:textColor="@color/purhcaseTextColour"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:fontFamily="@font/bricolage_grotesque_regular"/>

    </LinearLayout>

    <TextView
        android:id="@+id/estatePurchaseMeterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/meter_number"
        android:layout_below="@id/purchaseTwoSelectLinear"
        android:textColor="#3b3b3b"
        android:textSize="14sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/bricolage_grotesque_semi_bold"/>

    <EditText
        android:id="@+id/estatePurchaseMeterNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/estatePurchaseMeterText"
        android:background="@drawable/meter_back"
        android:layout_marginHorizontal="20dp"
        android:textSize="16sp"
        android:hint="7654 3456 7898 7609 "
        android:paddingHorizontal="10dp"
        android:paddingVertical="14dp"
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:textColor="@color/welcomeHead"
        android:textColorHint="@color/welcomeHead"
        android:fontFamily="@font/bricolage_grotesque_regular"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/estatePurchaseEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:layout_below="@id/estatePurchaseMeterNumber"
        android:textColor="#3b3b3b"
        android:textSize="14sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bricolage_grotesque_semi_bold"/>

    <EditText
        android:id="@+id/estatePurchaseEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/estatePurchaseEmailText"
        android:background="@drawable/meter_back"
        android:layout_marginHorizontal="20dp"
        android:textSize="16sp"
        android:hint="toluwa048@gmail.com"
        android:paddingHorizontal="10dp"
        android:paddingVertical="14dp"
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:textColor="@color/welcomeHead"
        android:textColorHint="@color/welcomeHead"
        android:fontFamily="@font/bricolage_grotesque_regular"
        android:layout_marginTop="6dp"/>

    <Button
        android:id="@+id/estatePurchaseAmountButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary"
        android:text="Continue"
        android:textColor="@color/white"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/bricolage_grotesque_semi_bold"
        android:padding="12dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/estatePurchaseEmail"/>

</RelativeLayout>